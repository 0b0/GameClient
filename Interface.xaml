<Window x:Class="RPGClient.Interface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Interface" Height="320" Width="533" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush Stretch="None" Viewport="512,512,512,512" ViewportUnits="Absolute" TileMode="Tile" ImageSource="/RPGClient;component/Images/grunge02.jpg" />
    </Window.Background>
    <Grid>
        <StackPanel>
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" HorizontalAlignment="Left">
                    <TextBlock Text="Identyfikator" HorizontalAlignment="Left" x:Name="idText" VerticalAlignment="Top" Foreground="White" />
                    <TextBlock Text="Login" HorizontalAlignment="Left" x:Name="loginText" VerticalAlignment="Top" Foreground="White" />
                    <TextBlock Text="E-mail" HorizontalAlignment="Left" x:Name="emailText" VerticalAlignment="Top" Foreground="White" />
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button Content="Wyloguj" Height="23" Name="logout" Width="75" Click="logout_Click" />
                </StackPanel>
            </DockPanel>
			<StackPanel>
                <TabControl Background="#DD000000" BorderBrush="{x:Null}">
					<TabItem Name="postacTab" TabIndex="0" IsSelected="True">
						<TabItem.Header>
	                        <StackPanel Orientation="Horizontal">
	                            <Image Height="50" Width="50" />
	                            <TextBlock VerticalAlignment="Center" Margin="5,0,0,0"><Run Text="Postać"/></TextBlock>
	                        </StackPanel>
	                    </TabItem.Header>
                        <StackPanel HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="characterName" />
                                <TextBlock x:Name="characterLevel" />
                            </StackPanel>
                            <DockPanel Width="150" VerticalAlignment="Center" Margin="0,0,0,5">
                                <Image Source="/RPGClient;component/Images/str.gif" Width="26" Height="25" />
                                <TextBlock DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center">Siła: </TextBlock>
                                <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" x:Name="characterStrength" />
                            </DockPanel>
                            <DockPanel Width="150" VerticalAlignment="Center" Margin="0,0,0,5">
                                <Image Source="/RPGClient;component/Images/stam.gif" Width="26" Height="25" />
                                <TextBlock DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center">Wytrzymałość:</TextBlock>
                                <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" x:Name="characterStamina" />
                            </DockPanel>
                            <DockPanel Width="150" VerticalAlignment="Center" Margin="0,0,0,5">
                                <Image Source="/RPGClient;component/Images/dex.gif" Width="26" Height="25" />
                                <TextBlock DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center">Zręczność:</TextBlock>
                                <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" x:Name="characterDexterity" />
                            </DockPanel>
                            <DockPanel Width="150" VerticalAlignment="Center" Margin="0,0,0,5">
                                <Image Source="/RPGClient;component/Images/luck.gif" Width="26" Height="25" />
                                <TextBlock DockPanel.Dock="Left" HorizontalAlignment="Left" VerticalAlignment="Center">Szczęście:</TextBlock>
                                <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" x:Name="characterLuck" />
                            </DockPanel>
                        </StackPanel>
					</TabItem>
					<TabItem Name="mapaTab" TabIndex="1">
						<TabItem.Header>
	                        <StackPanel Orientation="Horizontal">
	                            <Image Source="/RPGClient;component/Images/mapIcon.png" Height="50" Width="50" />
	                            <TextBlock VerticalAlignment="Center" Margin="5,0,0,0"><Run Text="Mapa"/></TextBlock>
	                        </StackPanel>
	                    </TabItem.Header>
                        <StackPanel>
                            <Button Content="Button" Height="23" Name="button1" Width="75" />
                            <Image Source="/RPGClient;component/Images/map.png" Stretch="Fill" />
                        </StackPanel>
					</TabItem>
				</TabControl>
			</StackPanel>
        </StackPanel>
    </Grid>
</Window>
